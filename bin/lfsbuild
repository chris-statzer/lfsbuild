#!/usr/bin/env python2.7

import sys
import os
import logging

sys.path.insert(0, "./")
from lfsbuild.task import Task


logging.basicConfig(level=logging.INFO)

tasks = {}
for f in os.listdir('./tasks'):
    t = Task('tasks/{}'.format(f))
    tasks[t.name] = t

for n, t in tasks.items():
    t.run()
